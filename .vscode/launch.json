{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Current file tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "--loader",
                "ts-node/esm",
                "${file}"
            ],
            "trace": true,
            "envFile": "${workspaceFolder}/.env",
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std"
        }
    ]
}